<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelreservationsystem.controllers.ManageReservationsController" alignment="CENTER" spacing="10">
    <ComboBox fx:id="userIdComboBox" promptText="User ID"/>
    <ComboBox fx:id="roomIdComboBox" promptText="Room ID"/>
    <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
    <DatePicker fx:id="endDatePicker" promptText="End Date"/>
    <TextField fx:id="totalPriceField" promptText="Total Price"/>
    <Button text="Add Reservation" onAction="#handleAddReservation"/>
    <TableView fx:id="reservationsTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="User ID" fx:id="userIdColumn"/>
            <TableColumn text="Room ID" fx:id="roomIdColumn"/>
            <TableColumn text="Start Date" fx:id="startDateColumn"/>
            <TableColumn text="End Date" fx:id="endDateColumn"/>
            <TableColumn text="Total Price" fx:id="totalPriceColumn"/>
        </columns>
    </TableView>
    <Button text="Back" onAction="#handleBack"/>
</VBox>
