<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelreservationsystem.controllers.ManageRoomsController" alignment="CENTER" spacing="10">
    <TextField fx:id="hotelIdField" promptText="Hotel ID"/>
    <TextField fx:id="roomNumberField" promptText="Room Number"/>
    <TextField fx:id="typeField" promptText="Room Type"/>
    <TextField fx:id="priceField" promptText="Price Per Night"/>
    <Button text="Add Room" onAction="#handleAddRoom"/>
    <TableView fx:id="roomsTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Hotel ID" fx:id="hotelIdColumn"/>
            <TableColumn text="Room Number" fx:id="roomNumberColumn"/>
            <TableColumn text="Type" fx:id="typeColumn"/>
            <TableColumn text="Price" fx:id="priceColumn"/>
        </columns>
    </TableView>
    <Button text="Back" onAction="#handleBack"/>
</VBox>
