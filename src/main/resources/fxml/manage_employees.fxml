<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelreservationsystem.controllers.ManageEmployeesController" alignment="CENTER" spacing="10">
    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="positionField" promptText="Position"/>
    <TextField fx:id="salaryField" promptText="Salary"/>
    <Button text="Add Employee" onAction="#handleAddEmployee"/>
    <Button text="Update Employee" onAction="#handleUpdateEmployee"/>
    <Button text="Delete Employee" onAction="#handleDeleteEmployee"/>
    <TableView fx:id="employeesTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Name" fx:id="nameColumn"/>
            <TableColumn text="Position" fx:id="positionColumn"/>
            <TableColumn text="Salary" fx:id="salaryColumn"/>
        </columns>
    </TableView>
    <Button text="Back" onAction="#handleBack"/>
</VBox>
