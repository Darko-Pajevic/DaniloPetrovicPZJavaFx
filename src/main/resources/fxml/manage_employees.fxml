<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelreservationsystem.controllers.ManageEmployeesController" alignment="CENTER" spacing="10">
    <TextField fx:id="nameField" promptText="Ime zaposlenog"/>
    <TextField fx:id="positionField" promptText="Pozicija"/>
    <TextField fx:id="salaryField" promptText="Plata"/>
    <Button text="Dodaj zaposlenog" onAction="#handleAddEmployee"/>
    <TableView fx:id="employeesTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Ime" fx:id="nameColumn"/>
            <TableColumn text="Pozicija" fx:id="positionColumn"/>
            <TableColumn text="Plata" fx:id="salaryColumn"/>
        </columns>
    </TableView>
    <Button fx:id="backButton" text="Nazad" onAction="#handleBack"/>
</VBox>
